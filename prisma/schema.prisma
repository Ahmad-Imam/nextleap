generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String        @id @default(uuid())
  clerkUserId   String        @unique
  email         String        @unique
  name          String?
  imageUrl      String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  bio           String?
  socials       Json[]
  skills        Json[]
  education     Json[]
  experience    Json[]
  proj          Json[]
  coverLetter   CoverLetter[]
  jobs          Job[]
  resume        Resume[]
  resumeContent Json?
}

model Resume {
  id        String   @id @default(cuid())
  userId    String
  name      String
  content   String
  atsScore  Float?
  feedback  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

model CoverLetter {
  id        String   @id @default(cuid())
  userId    String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  jobId     String?  @unique
  job       Job?     @relation(fields: [jobId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Job {
  id               String       @id @default(cuid())
  companyName      String
  location         String?
  salary           String?
  status           String       @default("open")
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
  userId           String
  applicationLink  String?
  industry         String?
  jobDescription   String
  jobTitle         String
  jobType          String?
  level            String?
  coverLetterId    String?
  jobRequirements  String[]
  responsibilities String[]
  isBookmark       Boolean      @default(false)
  timeline         Json[]
  coverLetter      CoverLetter?
  user             User         @relation(fields: [userId], references: [id])

  @@index([companyName])
}
