generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  clerkUserId   String   @unique
  email         String   @unique
  name          String?
  imageUrl      String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  bio           String?
  weeklyApplicationLimit  Int?
  monthlyApplicationLimit Int?
  socials       Json[]
  skillTypes    String[] @default([])
  skills        Json[]
  education     Json[]
  experience    Json[]
  proj          Json[]
  jobs          Job[]
  resume        Resume[]
  resumeContent Json?
}

model Resume {
  id        String   @id @default(cuid())
  userId    String
  name      String
  content   String
  atsScore  Float?
  feedback  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

model Job {
  id               String   @id @default(cuid())
  companyName      String
  location         String?
  salary           String?
  status           String   @default("open")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  userId           String
  applicationLink  String?
  industry         String?
  jobDescription   String
  jobTitle         String
  jobType          String?
  level            String?
  coverLetterId    String?
  jobRequirements  String[]
  responsibilities String[]
  notes            String?
  isBookmark       Boolean  @default(false)
  timeline         Json[]
  coverLetter      String?
  user             User     @relation(fields: [userId], references: [id])

  @@index([companyName])
}
